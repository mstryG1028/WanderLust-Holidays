<% layout("/layouts/boilerplate") %>

<div class="row justify-content-center create-section">
  <div class="col-lg-7 col-md-9 col-sm-11">
    <div class="card create-card">
      <div class="card-body">
        <h2 class="mb-4 text-center">Create New Listing</h2>

        <form
          method="POST"
          action="/listings"
          class="needs-validation"
          novalidate
          enctype="multipart/form-data"
        >

          <!-- TITLE -->
          <div class="mb-3">
            <label class="form-label">Title</label>
            <input
              type="text"
              name="title"
              class="form-control"
              placeholder="Add a title"
              required
            />
            <div class="invalid-feedback">Add title</div>
          </div>

          <!-- DESCRIPTION -->
          <div class="mb-3">
            <label class="form-label">Description</label>
            <input
              type="text"
              name="description"
              class="form-control"
              placeholder="Enter description"
              required
            />
            <div class="invalid-feedback">Write something</div>
          </div>

          <!-- IMAGE URL -->
          <div class="mb-3">
            <label class="form-label">Image URL</label>
            <input
              type="text"
              name="image"
              class="form-control"
              placeholder="https://example.com/image.jpg"
            />
          </div>

          <!-- PRICE + COUNTRY -->
          <div class="row">
            <div class="col-md-4 mb-3">
              <label class="form-label">Price</label>
              <input
                name="price"
                class="form-control"
                placeholder="1200"
                required
              />
              <div class="invalid-feedback">Give valid price</div>
            </div>

            <div class="col-md-8 mb-3">
              <label class="form-label">Country</label>
              <input
                type="text"
                name="country"
                class="form-control"
                placeholder="India"
                required
              />
              <div class="invalid-feedback">Add country</div>
            </div>
          </div>

          <!-- LOCATION -->
          <div class="mb-4">
            <label class="form-label">Location</label>
            <input
              type="text"
              name="location"
              class="form-control"
              placeholder="Mumbai, Maharashtra"
              required
            />
            <div class="invalid-feedback">Add location</div>
          </div>

          <button class="btn add-btn w-100">Add Listing</button>

        </form>
      </div>
    </div>
  </div>
</div>
